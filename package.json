{
  "name": "nextjs-playground",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:3100": "set PORT=3100 && next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:ci": "CI=true NEXT_PUBLIC_CI=true next build",
    "check": "tsc --noEmit",
    "check:build": "tsc --noEmit && next build",
    "transpile": "tsc --outDir .transpiled --declaration",
    "transpile:ci": "tsc --noEmit && CI=true NEXT_PUBLIC_CI=true next build",
    "start": "next start",
    "start:3100": "set PORT=3100 && next start",
    "lint": "biome lint --write",
    "lint:check": "biome lint",
    "test": "vitest --watch=false",
    "test:db": "vitest src/__tests__/database/setup.test.ts src/__tests__/database/seed.test.ts src/__tests__/database/schema.test.ts",
    "test:ui": "vitest --ui --exclude src/__tests__/database/seed.test.ts",
    "test:coverage": "vitest --coverage --exclude src/__tests__/database/seed.test.ts",
    "e2e": "playwright test",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "seed": "tsx src/lib/seed.ts",
    "prisma:studio": "prisma studio",
    "db:verify": "tsx verify-database.ts",
    "azurite:start": "bash scripts/start-azurite.sh",
    "azurite:stop": "bash scripts/stop-azurite.sh",
    "blob:monitor": "bash scripts/monitor-blob-events.sh",
    "db:upsert": "bash scripts/upsert-file-record.sh",
    "db:watch": "bash scripts/watch-dir-upsert.sh",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.1",
    "@libsql/client": "0.8.1",
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@tanstack/react-query": "^5.90.20",
    "dotenv": "^17.2.3",
    "next": "16.1.5",
    "react": "19.2.4",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prisma": "^7.3.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "pnpm": ">=10.18.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "biome lint --write"
  }
}
